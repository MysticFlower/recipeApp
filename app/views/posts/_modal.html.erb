<div  class="modal myModal" 
      tabindex="-1" 
      role="dialog" 
      aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <span class="posted-by"></span>
        <button type="button" 
                class="close" 
                data-dismiss="modal" 
                aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
        <div class="modal-body">
          <div class="loaded-data">
            <h3></h3>
            <p></p>
  
          <div class="interested">
               

<!-- <span><button type="button" class="btn btn-dark">< %= link_to 'Show', @post, :class=>"btn btn-dark"%></button></span> -->
<% if user_signed_in? %>
<%= link_to 'Show', posts_path %>
<% end %>
<% if !user_signed_in? %>
            <%= link_to "I'm Interested" , login_path %>
            <% end %>
            </div>
          </div><!-- loaded-data -->
        </div><!-- modal-body -->
    </div>
  </div>
</div>
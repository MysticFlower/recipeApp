<%= bootstrap_form_for(@post) do |f| %>
<%= f.text_field  :title, 
                  maxlength: 100, 
                  placeholder: 'Title', 
                  class: 'form-control',
                  required: true, 
                  minlength: 5,
                  maxlength: 100 %>
<%= f.hidden_field :branch, :value => @branch %>
<%= f.text_area :content, 
                rows: 6,
                required: true, 
                minlength: 20,
                maxlength: 1000,
                placeholder: 'Describe what you are looking for. E.g. specific recipes, basic level, etc.', 
                class: 'form-control' %>
<h4>Add Ingredients</h3>
 <%= f.nested_fields_for :ingredients do |ingredient| %>
 <%= ingredient.text_field :description%> <%= ingredient.remove_nested_fields_link "Remove", :class => "remove" %>
 <% end %>
 <br>            
  <%= f.add_nested_fields_link :ingredients %>  
 <h4>Preparation Steps</h4>
 <%= f.nested_fields_for :steps do |step| %>
 <%= step.text_field :direction, class: "form-control" %>
 <%= step.remove_nested_fields_link "Remove", :class => "remove"%>
 <% end %><br>
 <%= f.add_nested_fields_link :steps %>
<%= f.collection_select :category_id, @categories, :id, :name, class: 'form-control' %>

<%= f.submit "Create a Recipe", class: 'form-control' %>
<% end %>
